@model MVC_Application.Models.Customer
@{
    ViewBag.Title = "CustomerByOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerByOrder</h2>


<div class="container mt-4">
    <div class="card-shadow-lg">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0">Customer Details for Order ID: 1</h4>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <table class="table table-bordered">
                    <tr>
                        <th style="width:30%">Customer ID</th>
                        <th>@Model.CompanyName</th>
                    </tr>
                   
                    <tr>
                        <th>Contact Name</th>
                        <td>@Model.ContactName</td>
                    </tr>
                    <tr>
                        <th>Contact Title</th>
                        <td>@Model.ContactTitle</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>@Model.City</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>@Model.Country</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model.Phone</td>
                    </tr>

                </table>
            }
else
            {
                <div class="alert alert-danger text-center">
                    No Customer found for Order ID 1 </div>
            }
        </div>
        <div class="card-footer text-center">
            <a href="/Customer/CustomersInGermany" class="btn btn-primary">
                View Customers in Germany
            </a> 
        </div>
    </div>
</div>
