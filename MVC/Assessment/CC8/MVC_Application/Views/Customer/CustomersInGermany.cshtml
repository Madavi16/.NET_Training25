@model IEnumerable<MVC_Application.Models.Customer>
@{
    ViewBag.Title = "CustomersInGermany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomersInGermany</h2>
<div class="container mt-4">
    <div class=" card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">Customers Residing In Germany</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Customer ID</th>
                        <th>Company Name</th>
                        <th>Contact Name</th>
                        <th>City</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {

                        <tr>
                            <td>@c.CustomerID</td>
                            <td>@c.CompanyName</td>
                            <td>@c.ContactName</td>
                            <td>@c.City</td>
                            <td>@c.Country</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Equals(0))
            {
                <div class="alert alert-warning text-center">
                    No Customers found in Germany.
                </div>
            }
            <div class="card-footer text-center">
                <a href="/Customer/Index" class="btn btn-primary"> @@Back To Home </a>
            </div>
        </div>
    </div>
</div>

