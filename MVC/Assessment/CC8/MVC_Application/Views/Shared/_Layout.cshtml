<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
  
    <title>@ViewBag.Title - Northwind MVC</title>


    <style>
        body {
            background-color: #f5f7fa;
        }

        .navbar {
            background-color: #2c3e50;
        }

        .navbar-brand, .navbar-nav li a {
            color: white !important;
        }

        footer {
            background-color: #2c3e50;
            color: white;
            padding: 10px;
            text-align: center;
            margin-top: 30px;
        }

        .container-box {
            background: white;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Northwind MVC</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Customers in Germany", "CustomersInGermany", "Cusomter")</li>
                <li>@Html.ActionLink("Order 1", "CustomerOrderDetails", "Customer")</li>
            </ul>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="container-box">
            @RenderBody()
        </div>
    </div>

    <!-- FOOTER -->
    <footer>
        <p>© 2026 Northwind MVC | Database First Approach</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

