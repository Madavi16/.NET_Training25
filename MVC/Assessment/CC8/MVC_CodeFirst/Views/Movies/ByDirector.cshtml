@model IEnumerable<MVC_CodeFirst.Models.Movie>
@{
    ViewBag.Title = "ByDirector";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies By Director</h2>

<table class="table table-hover">
    <tr>
        <th>Movie</th>
        <th>Release Date</th>
    </tr>

    @foreach (var m in Model)
    {
        <tr>
            <td>@m.MovieName</td>
            <td>@m.DateOfRelease.ToShortDateString()</td>
        </tr>
    }
</table>


