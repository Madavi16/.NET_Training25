@model IEnumerable<MVC_CodeFirst.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h2>Movies List</h2>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Director</th>
        <th>Release</th>
        <th>Action</th>
    </tr>

    @foreach (var m in Model)
    {
        <tr>
            <td>@m.MovieName</td>
            <td>@m.DirectorName</td>
            <td>@m.DateOfRelease.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = m.Mid }) |
                @Html.ActionLink("Delete", "Delete", new { id = m.Mid })
            </td>
        </tr>
    }
</table>
